@model IEnumerable<UnicarAdmin.Models.ConductorViewModel>

@{
    ViewBag.Title = "CONDUCTOR";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CONDUCTOR</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<form asp-controller="Viaje" asp-action="Index">
    <p>
        Buscar conductor por nombre_usuario: <input type="text" name="SearchString">
        <input type="submit" value="Buscar" />
    </p>
</form>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre_usuario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellidos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValoracionMedia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Restriccion)
        </th>
        
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Nombre_usuario)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Nombre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Apellidos)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Password)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ValoracionMedia)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Tipo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Restriccion)
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.Nombre_usuario }) |
        @Html.ActionLink("Detalles", "Details", new { id = item.Nombre_usuario }) |
        @Html.ActionLink("Borrar", "Delete", new { id = item.Nombre_usuario })
    </td>
</tr>
}

</table>
